# Editor configuration, see https://editorconfig.org
root = true

# 共通
[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts}]
indent_size = 2
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2
